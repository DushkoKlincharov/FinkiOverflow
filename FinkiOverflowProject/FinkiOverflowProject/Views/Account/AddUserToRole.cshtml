@model FinkiOverflowProject.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item active">Settings</li>
    <li class="breadcrumb-item active">Add user to role</li>
</ol>

<hr />

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.selectedRole, new SelectList(Model.roles), new { @class = "form-control" })

            </div>

            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>
}